# VisionKrono Production Environment Configuration
# Copy this file to .env and configure your values

# ===========================================
# GOOGLE CLOUD CONFIGURATION
# ===========================================

# Google Vertex AI API Key (Primary)
GOOGLE_VERTEX_AI_API_KEY=your_vertex_ai_api_key_here

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id

# Google Vision API Key (Alternative/Backup)
GOOGLE_VISION_API_KEY=your_vision_api_key_here

# Gemini API Key (for AI processing)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Publishable Key
SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Port (default: 1144)
PORT=1144

# Node Environment
NODE_ENV=production

# ===========================================
# SSL CONFIGURATION
# ===========================================

# SSL Certificate Path (for development)
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Domain (for production)
DOMAIN=your-domain.com

# Enable HTTPS redirect
ENABLE_HTTPS_REDIRECT=true

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Image Processing
MAX_IMAGE_SIZE_MB=10
IMAGE_PROCESSING_TIMEOUT_MS=30000

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# ===========================================
# INSTRUCTIONS
# ===========================================

# 1. Google Cloud Setup:
#    - Go to Google Cloud Console
#    - Enable Vertex AI API and Vision API
#    - Create a Service Account
#    - Generate API keys
#    - Configure permissions

# 2. Supabase Setup (Optional):
#    - Create project at https://supabase.com
#    - Run supabase-setup.sql in SQL Editor
#    - Get URL and keys from Settings > API

# 3. SSL Certificates:
#    - For production: Use Let's Encrypt or commercial certificates
#    - For development: Run 'npm run generate-cert'

# 4. Domain Configuration:
#    - Point your domain to server IP
#    - Configure DNS records
#    - Update CORS_ORIGINS with your domain

# 5. Security:
#    - Change default passwords
#    - Configure firewall rules
#    - Enable HTTPS only
#    - Regular security updates
